app.get('/my-essays', (req, res) => {
  const userId = req.user.id;

  // query article with field of user equals to
  // current logged-in user
  Article.find({ user: userId })
    .then((articles) => {
       res.render('/views/my-essays.ejs', { articles })
    })
})

app.get('/my-essays/:id/edit', (req, res) => {
  const articleId = req.params.id;

  Article.findOne({ _id: articleId })
    .then((article) => {
       res.render('/views/edit-essay.ejs', { article })
    })
})