<% include partials/header%>

<div class="container" style="margin-top: 100px; margin-bottom: 40px">
    <form id="editEssayForm">
        <input name="articleId" type="hidden" value="<%= data.articleId %>">
        <input name="content" type="hidden" value="<%= data.content %>">
        <div class="container editBar">
            <input value="<%= data.title %>" name="title" placeholder="Essay title..." type="text" name="title" class="titleInput" autofocus autocomplete="off">
            <div id="editor-container"></div>
        </div>
        <div style="padding-bottom: 20px;">
            <center>
                <button type="submit" class="ui inverted primary button">SAVE</button>
                <a style="margin-left: 10px;" href="/my-essay" class="ui inverted green button">SUBMIT</a>
            </center>
        </div>
    </form>
</div>


<%- include('partials/footer', { scripts: ['/js/edit-essay.js'] }) %>